extends layouts/main

block content
    .form-container
        form(action=`/images${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="file") Image File
            input(type="file", id="file", name="imageFile", required=true, accept="image/*")
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload Video")